                    android:text="abcdefgh"
                    android:textColor="#5fc9f8"
                    android:textSize="18sp" />

            <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>